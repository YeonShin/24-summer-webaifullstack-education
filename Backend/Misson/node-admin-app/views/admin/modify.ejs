            <!--우측 콘텐츠 헤더영역 -->
            <div class="row wrapper border-bottom white-bg page-heading">
              <div class="col-lg-10">
                <h2>관리자 정보 관리</h2>
                <ol class="breadcrumb">
                  <li><a href="/Home/Index">Home</a>></li>
                  <li><a>관리자 정보 관리</a>></li>
                  <li class="active">
                    <strong>기존 관리자 확인 및 수정/삭제</strong>
                  </li>
                </ol>
              </div>
              <div class="col-lg-2"></div>
            </div>
    
            <!--우측 콘텐츠 영역 -->
            <div class="wrapper wrapper-content">
              <form action="/admin/modify" method="post" id="modifyForm">
                <div class="ibox-content m-b-sm border-bottom">
                  <!-- 글제목영역 -->
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label class="control-label">아이디</label>
                        <input type="text" name="adminId" id="adminName" class="form-control" value="<%=admin.adminId%>"/>
                      </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                          <label class="control-label">성명</label>
                          <input type="text" name="adminName" id="adminName" class="form-control" value="<%=admin.adminName%>"/>
                        </div>
                      </div>
                  </div>
    
                  <!-- 글내용영역 -->
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="form-group">
                        <label class="control-label">간략소개</label>
                        <textarea
                          class="form-control"
                          id="adminIntroduce"
                          name="adminIntroduce"
                          rows="10"
                          cols="5"
    
                        ><%=admin.adminIntroduce%></textarea>
                      </div>
                    </div>
                  </div>
    
                  <!-- 게시여부 영역하나만 표시 -->
                  <div class="row">
                    <div class="col-sm-4">
                      <div class="form-group">
                        <label class="control-label">게시여부</label>
                        <select class="form-control" id="usage" name="usage">
                          <option <% if(admin.usage == 9){%>selected<% }%> value="9">선택</option>
                          <option <% if(admin.usage == 1){%>selected<% }%> value="1">사용</option>
                          <option <% if(admin.usage == 0){%>selected<% }%> value="0">사용안함</option>
                        </select>
                      </div>
                    </div>
                  </div>
    
                  <div class="text-center">
                    <button type="submit" class="btn btn-primary">수정</button>
                    <button type="button" id="btnDelete" class="btn btn-danger">삭제</button>
                    <a href="/admin/list" class="btn btn-info">목록</a>
                  </div>
                </div>
              </form>
            </div>
            
    <script>
        $("#btnDelete").click(function() {
            if (confirm("정말 삭제하시겠습니까?")) {
                location.href = "/admin/delete?aid=<%=admin.adminIndex%>";
            }
        });
    </script>