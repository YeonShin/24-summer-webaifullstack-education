            <!--우측 콘텐츠 헤더영역 -->
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                  <h2>사용자 정보 관리</h2>
                  <ol class="breadcrumb">
                    <li><a href="/Home/Index">Home</a>></li>
                    <li><a>사용자 정보 관리</a>></li>
                    <li class="active">
                      <strong>기존 사용자 확인 및 수정/삭제</strong>
                    </li>
                  </ol>
                </div>
                <div class="col-lg-2"></div>
              </div>
      
              <!--우측 콘텐츠 영역 -->
              <div class="wrapper wrapper-content">
                <form action="/member/modify" method="post" id="modifyForm">
                  <div class="ibox-content m-b-sm border-bottom">
                    <!-- 글제목영역 -->
                    <div class="row">
                      <div class="col-sm-6">
                        <div class="form-group">
                          <label class="control-label">아이디</label>
                          <input type="text" name="memberId" id="memberName" class="form-control" value="<%=member.memberId%>"/>
                        </div>
                      </div>
                      <div class="col-sm-6">
                          <div class="form-group">
                            <label class="control-label">성명</label>
                            <input type="text" name="memberName" id="memberName" class="form-control" value="<%=member.memberName%>"/>
                          </div>
                        </div>
                    </div>
      
                    <!-- 글내용영역 -->
                    <div class="row">
                      <div class="col-sm-12">
                        <div class="form-group">
                          <label class="control-label">간략소개</label>
                          <textarea
                            class="form-control"
                            id="memberIntroduce"
                            name="memberIntroduce"
                            rows="10"
                            cols="5"
      
                          ><%=member.memberIntroduce%></textarea>
                        </div>
                      </div>
                    </div>
      
                    <!-- 게시여부 영역하나만 표시 -->
                    <div class="row">
                      <div class="col-sm-4">
                        <div class="form-group">
                          <label class="control-label">게시여부</label>
                          <select class="form-control" id="usage" name="usage">
                            <option <% if(member.usage == 9){%>selected<% }%> value="9">선택</option>
                            <option <% if(member.usage == 1){%>selected<% }%> value="1">사용</option>
                            <option <% if(member.usage == 0){%>selected<% }%> value="0">사용안함</option>
                          </select>
                        </div>
                      </div>
                    </div>
      
                    <div class="text-center">
                      <button type="submit" class="btn btn-primary">수정</button>
                      <button type="button" id="btnDelete" class="btn btn-danger">삭제</button>
                      <a href="/member/list" class="btn btn-info">목록</a>
                    </div>
                  </div>
                </form>
              </div>
              
      <script>
          $("#btnDelete").click(function() {
              if (confirm("정말 삭제하시겠습니까?")) {
                  location.href = "/member/delete?aid=<%=member.memberIndex%>";
              }
          });
      </script>